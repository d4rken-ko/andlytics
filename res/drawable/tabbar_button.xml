<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">

	<item
		android:state_selected="true">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<gradient
				android:startColor="#33B5E5"
				android:endColor="#8FD6F1"
				android:angle="270" />	
		</shape>
	</item>


	<!-- pressed -->
	<item
		android:state_pressed="true">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<gradient
				android:startColor="#33B5E5"
				android:endColor="#8FD6F1"
				android:angle="270" />	
		</shape>
	</item>

	<!-- focused -->
	<item
		android:state_focused="true">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<gradient
				android:startColor="#33B5E5"
				android:endColor="#8FD6F1"
				android:angle="270" />
		</shape>
	</item>

	<!-- disabled -->
	<item
		android:state_enabled="false">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<gradient
				android:startColor="#8FD6F1"
				android:endColor="#33B5E5"
				android:angle="270" />
		</shape>
	</item>

	<!-- default -->
	<item>
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">

			<gradient
				android:startColor="#555555"
				android:endColor="#555555"
				android:angle="270" />
		</shape>
	</item>

</selector>