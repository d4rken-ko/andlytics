<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Andlytics" parent="Theme.Sherlock.Light.DarkActionBar.ForceOverflow">
        <item name="actionBarStyle">@style/Widget.Andlytics.ActionBar</item>
    </style>

    <style name="Widget.Andlytics.ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="subtitleTextStyle">@style/TextAppearance.Andlytics.Widget.ActionBar.Subtitle</item>
    </style>
    
    <style name="TextAppearance.Andlytics.Widget.ActionBar.Subtitle" parent="Widget">
        <item name="android:textSize">@dimen/abs__action_bar_subtitle_text_size</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>
    
    <style name="MainTableText" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackText</item>
    </style>
    
    <style name="MainTableTextMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackText</item>
    </style>
    
    
    <style name="MainTableHeadline" parent="@style/MainTableText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lightBlue</item>
    </style>
    
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>    
        <item name="android:windowAnimationStyle">@style/Animation.InfoDialog</item>
           
    </style>
 
     <style name="Animation.InfoDialog" parent="@android:style/Animation">
        <item name="@android:windowEnterAnimation">@anim/info_dialog_fade_in</item>
        <item name="@android:windowExitAnimation">@anim/info_dialog_fade_out</item>
    </style>  
    
    <style name="ActionBarSeparator">
        <item name="android:layout_width">2px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/actionbar_separator</item>
    </style>
    
    <style name="andRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/and_ratingbar_full</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>
    
</resources>
