<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="-5dp"
    android:paddingRight="-5dp"
    android:paddingTop="5dp" >

    <TextView
        style="@style/MainTableText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="@string/info_comments" />

    <RelativeLayout
        android:id="@+id/comments_list_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-12dp"
        android:layout_marginRight="-12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/row_background_inner_borderless" >

        <View
            android:id="@+id/main_app_spacer2"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@drawable/row_dash" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="28dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_more" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_app_spacer2"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:gravity="center"
                android:paddingRight="6dp"
                android:src="@drawable/icon_refresh_dark" />

            <TextView
                android:id="@+id/comments_footer_loadmore"
                style="@style/MainTableText"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/load_more_comments" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>